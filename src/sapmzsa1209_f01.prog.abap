FORM get_emp_name  USING    VALUE(p_pernr)
                   CHANGING VALUE(p_ename).

  CLEAR p_ename.
  SELECT SINGLE ename
    FROM ztsa0001
    into p_ename
    WHERE pernr = p_pernr.

ENDFORM.
